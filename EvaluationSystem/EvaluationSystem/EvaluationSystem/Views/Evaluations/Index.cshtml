@model IEnumerable<EvaluationSystem.Models.Evaluation>

@{
    ViewData["Title"] = "Evaluation";
}


<h1 class="text-white">@ViewData["Title"]</h1>
<p class="text-white">
    <a asp-action="Create" class="btn btn-info">Create New</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-light">Home</a>
</p>
<table class="table row-border" id="evalTable" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Term)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GradingPeriod)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradingPeriod.GradingPeriodName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EvaluationId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EvaluationId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EvaluationId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/js/site.js" async></script>