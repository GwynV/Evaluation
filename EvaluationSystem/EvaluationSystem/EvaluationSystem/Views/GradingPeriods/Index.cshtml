@model IEnumerable<EvaluationSystem.Models.GradingPeriod>

@{
    ViewData["Title"] = "Grading Period";
}

<!DOCTYPE html>

<html>
<body>
    <h1 class="text-white">@ViewData["Title"]</h1>
    <p class="text-white">
        <a asp-action="Create" class="btn btn-info">Create New</a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-light">Home</a>
    </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GradingPeriodName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradingPeriodName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GradingPeriodId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GradingPeriodId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GradingPeriodId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
